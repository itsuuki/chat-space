.side
  .header
    .top-items
      %p.top-items__name
        = current_user.name
      %ul.top-items__icons
        %li.top-items__icons__cog
          = link_to new_group_path do
            = icon('fas', 'cog', class: "icon")
        %li.top-items__icons__edit
          = link_to edit_user_path(current_user) do
            = icon('fas', 'edit', class: 'icon')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class: "message-group" do
          .group-text__name
            = group.name
          .group-text__message
            group.show_last_message